<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.baxter.config</groupId>
        <artifactId>baxter-config-processor-parent</artifactId>
        <version>1.4</version>
    </parent>

    <groupId>com.baxter.config.processor.pe</groupId>
    <artifactId>baxter-config-processor-price-engine</artifactId>
    <version>1.3.5-SNAPSHOT</version>

    <name>Configuration Processor for Price Engine</name>
    <description>Configuration processor to be used with Baxter Configuration Server.</description>

    <url>https://repository-baxter.forge.cloudbees.com/private/sites/config-processor/pe</url>

    <inceptionYear>2013</inceptionYear>

    <scm>
        <connection>scm:git:ssh://git@git.cloudbees.com/baxter/config-processor-price-engine.git</connection>
        <developerConnection>scm:git:ssh://git@git.cloudbees.com/baxter/config-processor-price-engine.git</developerConnection>
        <url>ssh://git@git.cloudbees.com/baxter/config-processor-price-engine.git</url>
        <tag>HEAD</tag>
    </scm>

    <build>

        <plugins>

            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
            </plugin>

        </plugins>

    </build>

    <profiles>

        <profile>
            <id>Distribution-CloudBees</id>
            <distributionManagement>
                <site>
                    <id>cloudbees-private-repository</id>
                    <name>Baxter Configuration Site</name>
                    <url>dav:https://repository-baxter.forge.cloudbees.com/private/sites/config-processor/pe</url>
                </site>
            </distributionManagement>
        </profile>

        <profile>
            <id>Development</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>build-env-config</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <finalName>config</finalName>
                                    <descriptors>
                                        <descriptor>src/main/assembly/dev-config.xml</descriptor>
                                    </descriptors>
                                    <attach>false</attach>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <properties>
            </properties>
        </profile>

        <profile>
            <id>DEB</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>unix-maven-plugin</artifactId>
                        <groupId>no.arktekk.unix</groupId>
                        <executions>
                            <execution>
                                <id>build-deb-installer</id>
                                <configuration>
                                    <deb>
                                        <depends>${deb.config-server.dep},baxter-config-processor-statistics</depends>
                                        <replaces>price-engine-config-processor</replaces>
                                    </deb>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>RPM</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>
                        <configuration>
                            <conflicts>
                                <conflict>baxter-price-engine-config-processor</conflict>
                                <conflict>price-engine-config-processor</conflict>
                            </conflicts>
                            <requires combine.children="append">
                                <require>baxter-config-processor-statistics</require>
                            </requires>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>

    <dependencyManagement>

        <dependencies>

            <dependency>
                <groupId>com.baxter.config</groupId>
                <artifactId>baxter-config-processor</artifactId>
                <version>${config.dep.version}</version>
            </dependency>

            <dependency>
                <groupId>com.baxter.config</groupId>
                <artifactId>baxter-config-server</artifactId>
                <version>${config.dep.version}</version>
                <type>war</type>
            </dependency>

        </dependencies>

    </dependencyManagement>

    <properties>
        <config.dep.version>1.4</config.dep.version>
    </properties>

</project>
